server {
    listen 80;
    server_name <%= @server_name %>;

    root <%= @root %>;

    access_log /var/log/nginx/$host-access.log;
    error_log  /var/log/nginx/angularjs-error.log error;

    index index.html index.htm;

    try_files $uri $uri/ @rewrite;

    location ~ /\.ht {
        deny all;
    }
}
